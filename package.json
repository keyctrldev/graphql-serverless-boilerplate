{
  "name": "graphql-serverless-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc && npm run copy-files",
    "copy-files": "copyfiles -u 1 src/schema.graphql dist/src",
    "prestart": "npm run build",
    "start": "npm run build && serverless offline start",
    "deploy": "npm run build && serverless deploy",
    "generate": "graphql-codegen",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{json,css,scss,md}": "prettier --write"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.9",
    "@graphql-codegen/typescript-resolvers": "^4.2.1",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "serverless": "^4.4.3",
    "serverless-offline": "^14.3.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.669.0",
    "@aws-sdk/client-dynamodb": "^3.665.0",
    "@aws-sdk/lib-dynamodb": "^3.665.0",
    "@graphql-tools/schema": "^10.0.6",
    "apollo-server-lambda": "^3.13.0",
    "aws-jwt-verify": "^4.0.1",
    "graphql": "^16.9.0",
    "graphql-middleware": "^6.1.35",
    "graphql-shield": "^7.6.5",
    "knex": "^3.1.0",
    "tedious": "^18.6.1"
  }
}
